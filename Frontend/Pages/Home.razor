@page "/"
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Home</PageTitle>

<h1>Veículos Estacionados</h1>

@if (veiculos == null)
{
    <p><em>Carregando Veículos...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Placa</th>
                <th>Horas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in veiculos)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Placa</td>
                    <td>@item.HorasEstacionado</td>
                </tr>
            }
        </tbody>
    </table>    
}

@code {
    private Veiculo[]? veiculos;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Chama o método ReadAll do seu controller (GET api/veiculos)
            veiculos = await Http.GetFromJsonAsync<Veiculo[]>("api/veiculos");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao buscar veículos: {ex.Message}");
        }
    }

    public class Veiculo
    {
        public int Id { get; set; }
        public string? Placa { get; set; }
        public int HorasEstacionado { get; set; }
    }
}